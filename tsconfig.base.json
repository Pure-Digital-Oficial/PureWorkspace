{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@pureWorkspace/data-access": ["libs/data-access/src/index.ts"],
      "@pureWorkspace/domain": ["libs/domain/src/index.ts"],
      "@pureWorkspace/feature": ["libs/feature/src/index.ts"]
    }
  }
}
